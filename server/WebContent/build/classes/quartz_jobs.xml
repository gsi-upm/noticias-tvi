<quartz ... >
    <job>
        <job-detail>
            <name>GetContentFromSources</name>
            <group>GetContentGroup</group>
            <description>ExampleJob</description>
            <job-class>es.upm.dit.gsi.cron.GetContentFromSources</job-class>
            <job-data-map allows-transient-data="false">
                <entry>
                    <key>nombre</key>
                    <value>cron</value>
                </entry>
            </job-data-map>
        </job-detail>
        <trigger>
            <cron>
                <name>QuartzExampleTrigger</name>
                <group>ExampleTriggerGroup</group>
                <job-name>GetContentFromSources</job-name>
                <job-group>GetContentGroup</job-group>
                <!-- Se dispara cada 10 segundos -->
                <cron-expression>0/10 * * * * ?</cron-expression>
            </cron>
        </trigger>
    </job>
</quartz>
