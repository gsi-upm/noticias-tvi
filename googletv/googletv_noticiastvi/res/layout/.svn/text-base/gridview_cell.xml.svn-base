<RelativeLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell"
    android:layout_width="240dp"
    android:layout_height="200dp"
    android:padding="3dp" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
		We want to show the selection rect arround this image. We do it by
